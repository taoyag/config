[user]
    name = taoyag
    email = taoyag@gmail.com
[core]
	excludesfile = /Users/taoyag/.gitignore_global
[color]
    status = auto
    diff = auto
    branch = auto
    interactive = auto
    grep = auto
[alias]
  st = status
    sh = show
    so = remote show origin
    ft = fetch
    up = pull --rebase
    rbm = rebase master
    ad = add
    ci = commit -a
    cam = commit -a --amend
    co = checkout

[github]
	user = taoyag
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
